<assembly>
  <id>full</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <!-- TODO: use expressions instead: ${project.build.directory}, ${project.build.finalName}, or have a <build /> tag to include the built artifact -->
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>annocon-*.jar</include>
      </includes>
      <excludes>
        <exclude>annocon-examples*.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src</directory>
      <includes>
        <include>core/**</include>
        <include>examples/**</include>
      </includes>
      <excludes>
        <exclude>src/site/**</exclude>
        <exclude>core/target/**</exclude>
        <exclude>examples/target/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <includes>
        <include>LICENSE.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>xml-apis</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
